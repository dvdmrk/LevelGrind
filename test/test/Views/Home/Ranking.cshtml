@model IEnumerable<test.Models.ApplicationUser>

@{
    ViewBag.Title = "Ranking";
}
@{
    int i = 1;
    int level;
}
<div class="row col-md-7">
    <h2>
        <i class="fa fa-trophy brand"></i>
        <div class="pull-right">
            Avatar Ladder
        </div>
    </h2>
</div>
<div class="row">
    <div class="col-md-7 well well-lg">
        <p>Experience is earned in the gym, and on the battle field. See how much experience you can attain before Valhalla!</p>
    </div>
</div>
<div class="col-md-7">
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th class="hidden-xs">Rank:</th>
                <th>Avatar:</th>
                <th>Experience:</th>
                <th class="hidden-xs">Level:</th>
            </tr>
        </thead>
        @foreach (var item in Model)
            {
            <tr>
                <td class="hidden-xs">@i</td>
                @{
                    i++;
                }
                <td>
                    <a href="/Home/Avatar?pseudonym=@item.Pseudonym">@Html.DisplayFor(modelItem => item.Pseudonym)</a>
                </td>
                <td>@Html.DisplayFor(modelItem => item.TrainingTotal)</td>
                <td class="hidden-xs">
                    @{
                        level = (int)((item.TrainingTotal / 63.4) + 1);
                    }
                    @level
                </td>
            </tr>
                        }
    </table>
</div>
<div class="container">
</div>
