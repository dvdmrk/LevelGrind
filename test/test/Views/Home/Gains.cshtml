@model test.Models.RegisterViewModel
@{
    ViewBag.Title = "Weight Loss";
}

<div class="row col-md-7">
    <h3>
        <i class="fa fa-heartbeat brand" aria-hidden="true"></i>
        <div class="pull-right">
            Weight Loss Calculator
        </div>
    </h3>
</div>
<div class="row">
    <div class="well well-lg col-md-7">
        <p>When you train hard and get results, update your weight and you'll receive new calcuations for HMI and AMR. Valhalla!</p>
    </div>
    @if (ViewBag.Message == "Invalid")
    {
        <div class="col-md-7">
            <div class="alert alert-danger">@ViewBag.Details</div>
        </div>
    }
    <div class="col-md-7">

        @using (Html.BeginForm("Gains", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.CurrentWeight, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.CurrentWeight, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Training" />
                </div>
            </div>
        }
    </div>
</div>
<div class="container">
</div>