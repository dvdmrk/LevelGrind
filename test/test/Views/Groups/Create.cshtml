@model test.Models.RegisterViewModel
@{
    ViewBag.Title = "Create a Clan";
}

<div class="row col-md-7">
    <h3>
        <i class="fa fa-heartbeat brand" aria-hidden="true"></i>
        <div class="pull-right">
            Create
        </div>
    </h3>
</div>
<div class="row">
    <div class="well well-lg col-md-7">
        <p>The people you train with should be your biggest competetors and your greatest comrades!</p>
    </div>
    <div class="col-md-7">
        @using (Html.BeginForm("Create", "Groups", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Group, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Group, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="Training" />
                </div>
            </div>
        }
    </div>
</div>
<div class="container">
</div>
